!!! 5
%html{:lang => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title CloudApp

    %meta{:charset => "utf-8"}/

    %meta{:content => "cloud, app, mac, share, images, files", :name => "keywords"}/
    %meta{:content => "Share. Files. Fast.", :name => "description"}/

    %link{:href => "/stylesheets/styles.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "http://blog.getcloudapp.com/feed.xml", :rel => "alternate", :type => "application/atom+xml"}/

    /[if IE]
      <link href="/stylesheets/iefix.css" rel="stylesheet" type="text/css">
      <script src="/javascripts/html5.js" type="text/javascript"></script>

  %body
    #wrapper
      %header.clearfix
        %h1.left
          %a{:href => "/"} CloudApp
        %nav.right
          %ul
            %li
              - if @loc
                Application
              - else
                %a{:href => "/"} Application

            %li
              %a{:href => "http://blog.getcloudapp.com"} Blog

            %li
              %a{:href => "http://support.getcloudapp.com"} Support

            %li.no_right
              %a{:href => "http://my.cl.ly/login"} Login

      = yield

      %footer.clearfix
        %ul.left
          %li &copy;2010 Linebreak S.L.

          %li
            Powered by
            %a{:href => "http://heroku.com"} Heroku

          %li
            %a{:href => "http://support.getcloudapp.com/faqs/company/contact"} Contact

          %li
            %a{:href => "/terms"} Terms

          %li
            %a{:href => "/privacy"} Privacy

          %li.reset_all
            %a{:href => "http://support.getcloudapp.com/faqs/developers"} Developers

        %ul.right
          %li.reset_all
            %a{:href => "http://www.twitter.com/getcloudapp"} Twitter

    :javascript
      var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));

    :javascript
      try {
        var pageTracker = _gat._getTracker("UA-13203564-3");
        pageTracker._trackPageview();
      } catch(err) {}
